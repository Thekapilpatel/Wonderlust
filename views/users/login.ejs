<% layout("layouts/boilerPlate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login </h1>
        <form action="/login" method="post">
            <!-- //for username -->
            <div class="col-6 offset-3">
                <div class="mb-3"> <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" id="username" required>

                </div>



                <!-- //for passwords -->

                <div class="mb-3"> <label for="passwords" class="form-label">passwords</label>
                    <input type="password" name="password" class="form-control" id="passwords" required>

                </div>
                <button class="btn btn-success">Login</button>
        </form>
    </div>
    </div>